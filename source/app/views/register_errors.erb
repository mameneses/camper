<h1>Register</h1>
<form name="create-user" action="/users" method="post">
	<h3>First Name</h3>
	<input type="text" name="first_name" placeholder="Ex: John" value='<%=@first_name%>' >
	<ul>
		<% @user.errors[:first_name].each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
	<h3>Last Name</h3>
	<input type="text" name="last_name" placeholder="Ex: Doe" value="<%= @last_name %>">
	<h3>Email</h3>
	<input type="text" name="email" placeholder= "Ex: example@email.com" value="<%= @email%>">
	<ul>
		<% @user.errors[:email].each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
	<h3>Password</h3>
	<input type="text" name="password" placeholder="At least 8 characters">
	<ul>
		<% @user.errors[:password].each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
	<br>
	<input type="submit" value="Submit">
</form>